<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.instagram.like.model.mapper.LikeMapper">

    <!-- 로그인 회원 좋아요 목록 -->
    <select id="selectLikePostId">
        SELECT post_id
        FROM likes
        WHERE user_id = #{loginUserId};
    </select>

    <!-- 로그인 회원 특정 게시물 좋아요 유무 확인 -->
    <select id="selectLike" parameterType="Like" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM likes
        WHERE post_id = #{postId}
          AND user_id = #{userId}
    </select>

    <!-- 게시물 좋아요 수 -->
    <select id="selectLikes">
        SELECT COUNT(*)
        FROM likes
        WHERE post_id = #{selectedPostId}
    </select>

    <!-- 좋아요 추가 -->
    <insert id="insertLike" parameterType="Like">
        INSERT INTO likes (post_id, user_id)
        VALUES (#{postId}, #{userId})
    </insert>

    <!-- 좋아요 취소 -->
    <delete id="deleteLike" parameterType="Like">
        DELETE FROM likes
        WHERE post_id = #{postId}
          AND user_id = #{userId}
    </delete>

</mapper>
